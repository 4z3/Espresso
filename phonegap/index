#! /bin/sh
set -euf

realpath() {
  python -c 'import os, sys; print os.path.realpath(sys.argv[1])' "$1"
}

ROOT="$(dirname "$(realpath "$0")")"
PATH="$ROOT/bin:${PATH+:$PATH}"; export PATH

script="`read-config.json`"

eval "$script"

PATH="$ROOT/$method:${PATH+:$PATH}"; export PATH

exec "$action"
exec "$ROOT/$method/$action"
